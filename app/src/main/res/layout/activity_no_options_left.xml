<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E9DFBF"
    android:gravity="center"
    android:padding="16dp">

    <TextView
        android:id="@+id/noOptionsMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No more restaurant options left."
        android:textSize="18sp"
        android:textColor="#5E01A1"
        android:paddingBottom="16dp" />

    <TextView
        android:id="@+id/suggestionMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please restart to explore new options or refine your search."
        android:textColor="#B77EE0"
        android:textSize="16sp" />
</LinearLayout>
