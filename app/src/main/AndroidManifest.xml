<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.finalproject">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Dish Dash"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FinalProject">

        <!-- IntroActivity as the launcher activity -->
        <activity
            android:name=".IntroActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />


        <!-- CuisineActivity -->
        <activity
            android:name=".CuisineActivity"
            android:exported="false" />

        <!-- DecisionActivity -->
        <activity
            android:name=".DecisionActivity"
            android:exported="false" />

        <!-- FinalChoiceActivity -->
        <activity
            android:name=".FinalRestaurantActivity"
            android:exported="false" />

        <!-- NoOptionsLeftActivity -->
        <activity
            android:name=".NoOptionsLeftActivity"
            android:exported="false" />

    </application>
</manifest>

